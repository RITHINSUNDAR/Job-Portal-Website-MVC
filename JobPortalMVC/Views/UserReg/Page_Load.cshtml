@model JobPortalMVC.Models.UserInsert
@{
    ViewBag.Title = "Page_Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Page_Load</h2>
<div>
    @using (Html.BeginForm("Insert_Click", "UserReg", FormMethod.Post))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.User_Name)
            @Html.ValidationMessageFor(m => m.User_Name)

        </div>
        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.User_Email)
            @Html.ValidationMessageFor(m => m.User_Email)

        </div>
        <div>
            <label>Date Of Birth(dd-mm-yy):</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.User_Dob)
            @Html.ValidationMessageFor(m => m.User_Dob)

        </div>
        <div>
            <label>Phone:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Ph)
            @Html.ValidationMessageFor(m => m.Ph)

        </div>
        <div>
            <label>Experiance(in year):</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.ExperianceInyear)
            @Html.ValidationMessageFor(m => m.ExperianceInyear)

        </div>
        <div>
            <label>Skills:</label>
        </div>
        <div>
            @foreach (var item in Model.favSkill)
            {
                <label>
                    <input type="checkbox" value="@item.value" checked="@item.IsChecked"
                           name="selecetdskill" id="@item.value" />@Html.Raw(item.text)
                    </label>

                }
        </div>
        <div>
            <label>Skills:</label>
        </div>
        <div>
            @foreach (var item in Model.favQuali)
            {
                <label>
                    <input type="checkbox" value="@item.value" checked="@item.IsChecked"
                           name="selectedqual" id="@item.value" />@Html.Raw(item.text)
                    </label>

                }
        </div>

        <div>
            <label>User Name</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)
            @Html.ValidationMessageFor(m => m.username)
        </div>
        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.password)
        </div>
        <div>
            <label>Confirm Password:</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.cpassword)
            @Html.ValidationMessageFor(m => m.cpassword)
        </div>
        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.msg)
        </div>

    }
</div>

