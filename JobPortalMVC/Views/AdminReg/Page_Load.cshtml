@model JobPortalMVC.Models.AdminInsert
@{
    ViewBag.Title = "Page_Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Page_Load</h2>
<div>
    @using (Html.BeginForm("Insert_Click", "AdminReg", FormMethod.Post))
    {
        <div>
            <label>Admin Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Admin_Name)
            @Html.ValidationMessageFor(m => m.Admin_Name)
        </div>
        <div>
            <label>Company Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Company_Name)
            @Html.ValidationMessageFor(m => m.Company_Name)
        </div>
        <div>
            <label>Company Description:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Company_Description)
            @Html.ValidationMessageFor(m => m.Company_Description)
        </div>
        <div>
            <label>Username:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)
            @Html.ValidationMessageFor(m => m.username)
        </div>
        <div>
            <label>Password</label>

        </div>
        <div>
            @Html.PasswordFor(m=>m.cpassword)
            @Html.ValidationMessageFor(m=>m.cpassword)
        </div>
        <div>
            <input type="submit" value="Insert"/>
            @Html.DisplayFor(m => m.msg)
        </div>



    }
</div>

